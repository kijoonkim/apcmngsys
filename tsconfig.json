{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": ["jquery"],
    "baseUrl": ".",                         // ⬅️ 추가
    "paths": {
      "@apps/*": ["src/react/apps/*"],
      "@shared/*": ["src/react/shared/*"],
      "@ui/*": ["src/react/shared/components/ui/*"],
      "@lib/*": ["src/react/shared/lib/*"],
      "@hooks/*": ["src/react/shared/hooks/*"],
      "@types/*": ["src/react/shared/types/*"],
      "@assets/*": ["src/react/assets/*"]
    }
  },
  "include": ["src", "vite.config.ts"]
}