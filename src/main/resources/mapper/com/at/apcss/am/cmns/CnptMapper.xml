<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<!-- ==========================================================================	-->
<!-- NAME : CnptMapper.xml                                   					-->
<!-- DESC : 거래처정보 mapper                                             		-->
<!-- ==========================================================================	-->
<!-- DATE   		AUTHOR        	DESCRIPTION                      			-->
<!-- ===========  	============  	===========================================	-->
<!-- 2023.07.11  	jcshin        	Initial Creation                            -->
<!-- ==========================================================================	-->

<mapper namespace="com.at.apcss.am.cmns.mapper.CnptMapper">


	<!-- ==========================================================================	-->
	<!-- NAME : com.at.apcss.am.cmns.mapper.CnptMapper.selectCnptList				-->
	<!-- DESC : 거래처정보 목록 조회.	                                       		-->
	<!-- ==========================================================================	-->
	<!-- DATE   		AUTHOR        	DESCRIPTION                      			-->
	<!-- ===========  	============  	===========================================	-->
	<!-- 2023.07.13  	김 호        	Initial Creation                            -->
	<!-- ==========================================================================	-->
    <select id="selectCnptList" parameterType="com.at.apcss.am.cmns.vo.CnptVO" resultType="com.at.apcss.am.cmns.vo.CnptVO">
    	<![CDATA[
    	SELECT CT.APC_CD            AS APC_CD
		     , CT.CNPT_CD           AS CNPT_CD
		     , CT.CNPT_NM           AS CNPT_NM
		     , CT.BRNO              AS BRNO
		     , CT.CNPT_TYPE         AS CNPT_TYPE
		     , CT.PIC_NM            AS PIC_NM
		     , CT.TELNO             AS TELNO
		     , CT.RMRK              AS RMRK
		     , CT.DEL_YN            AS DEL_YN
		  FROM TB_CNPT_INFO CT
		 WHERE APC_CD 		= #{apcCd}
		]]>
    </select>

    <!-- ==========================================================================	-->
	<!-- NAME : com.at.apcss.am.cmns.mapper.CnptMapper.insertCnpt					-->
	<!-- DESC : 거래처정보 등록.	                                       			-->
	<!-- ==========================================================================	-->
	<!-- DATE   		AUTHOR        	DESCRIPTION                      			-->
	<!-- ===========  	============  	===========================================	-->
	<!-- 2023.07.13  	김 호        	Initial Creation                            -->
	<!-- ==========================================================================	-->
    <insert id="insertCnpt" parameterType="com.at.apcss.am.cmns.vo.CnptVO">
    	<![CDATA[
    	INSERT INTO TB_CNPT_INFO
    		(
    			APC_CD
    		  , CNPT_CD
    		  , CNPT_NM
    		  , BRNO
    		  , CNPT_TYPE
    		  , PIC_NM
    		  , TELNO
    		  , RMRK
    		  , DEL_YN
    		  , SYS_FRST_INPT_DT
    		  , SYS_FRST_INPT_USER_ID
    		  , SYS_FRST_INPT_PRGRM_ID
    		  , SYS_LAST_CHG_DT
    		  , SYS_LAST_CHG_USER_ID
    		  , SYS_LAST_CHG_PRGRM_ID
    		)
   		VALUES
   			(
   				#{apcCd}
    		  , FN_GET_ID_CNPT(#{apcCd})
    		  , #{cnptNm}
    		  , #{brno}
    		  , #{cnptType}
			  , #{picNm}
    		  , #{telno}
    		  , #{rmrk}
    		  , #{delYn}
    		  , SYSDATE
    		  , #{sysFrstInptUserId}
    		  , #{sysFrstInptPrgrmId}
    		  , SYSDATE
    		  , #{sysLastChgUserId}
    		  , #{sysLastChgPrgrmId}
   			)
    	]]>
    </insert>

    <!-- ==========================================================================	-->
	<!-- NAME : com.at.apcss.am.cmns.mapper.CnptMapper.updateCnpt					-->
	<!-- DESC : 거래처정보 변경.	                                       			-->
	<!-- ==========================================================================	-->
	<!-- DATE   		AUTHOR        	DESCRIPTION                      			-->
	<!-- ===========  	============  	===========================================	-->
	<!-- 2023.07.13  	김 호        	Initial Creation                            -->
	<!-- ==========================================================================	-->
	<update id="updateCnpt" parameterType="com.at.apcss.am.cmns.vo.CnptVO">
		<![CDATA[
		UPDATE TB_CNPT_INFO
		   SET SYS_LAST_CHG_DT 			= SYSDATE
    		 , SYS_LAST_CHG_USER_ID		= #{sysLastChgUserId}
    		 , SYS_LAST_CHG_PRGRM_ID 	= #{sysLastChgPrgrmId}
			 , CNPT_NM					= #{cnptNm}
    		 , BRNO						= #{brno}
    		 , CNPT_TYPE				= #{cnptType}
    		 , PIC_NM					= #{picNm}
    		 , TELNO					= #{telno}
    		 , RMRK						= #{rmrk}
		 WHERE APC_CD 					= #{apcCd}
		   AND CNPT_CD 					= #{cnptCd}
		]]>
	</update>

	<!-- ==========================================================================	-->
	<!-- NAME : com.at.apcss.am.cmns.mapper.CnptMapper.deleteCnpt					-->
	<!-- DESC : 거래처정보 삭제.	                                       			-->
	<!-- ==========================================================================	-->
	<!-- DATE   		AUTHOR        	DESCRIPTION                      			-->
	<!-- ===========  	============  	===========================================	-->
	<!-- 2023.07.13  	김 호        	Initial Creation                            -->
	<!-- ==========================================================================	-->
	<delete id="deleteCnpt" parameterType="com.at.apcss.am.cmns.vo.CnptVO">
		<![CDATA[
		DELETE FROM TB_CNPT_INFO
		 WHERE APC_CD		= #{apcCd}
		   AND CNPT_CD 		= #{cnptCd}
		]]>
	</delete>

</mapper>


