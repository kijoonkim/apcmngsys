<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<!-- ==========================================================================	-->
<!-- NAME : RawMtrTrsprtCstMapper.xml                                   		-->
<!-- DESC : 원물운임비용등록 mapper                                             		-->
<!-- ==========================================================================	-->
<!-- DATE   		AUTHOR        	DESCRIPTION                      			-->
<!-- ===========  	============  	===========================================	-->
<!-- 2023.08.04  	하민우        	Initial Creation                            -->
<!-- ==========================================================================	-->

<mapper namespace="com.at.apcss.am.cmns.mapper.RawMtrTrsprtCstMapper">


	<!-- ==========================================================================	-->
	<!-- NAME : com.at.apcss.am.cmns.mapper.RawMtrTrsprtCstMapper.selectWrhsVhclList-->
	<!-- DESC : 원물운임비용 목록 조회.	                                       			-->
	<!-- ==========================================================================	-->
	<!-- DATE   		AUTHOR        	DESCRIPTION                      			-->
	<!-- ===========  	============  	===========================================	-->
	<!-- 2023.08.04  	하민우        	Initial Creation                            -->
	<!-- ==========================================================================	-->
    <select id="selectRawMtrTrsprtCstList" parameterType="com.at.apcss.am.cmns.vo.RawMtrTrsprtCstVO" resultType="com.at.apcss.am.cmns.vo.RawMtrTrsprtCstVO">
    	<![CDATA[
    	SELECT TC.APC_CD            AS APC_CD
		     , TC.TRSPRT_YMD		AS TRSPRT_YMD
		     , TC.VHCLNO     		AS VHCLNO
		     , TC.SN				AS SN
		     , TC.TRSPRT_SE_CD      AS TRSPRT_SE_CD
		     , TC.TRSPRT_RGN_CD		AS TRSPRT_RGN_CD
		     , TC.WRHS_WGHT			AS WRHS_WGHT
		     , TC.TRSPRT_CST        AS TRSPRT_CST
		     , TC.BANK_CD    	    AS BANK_CD
		     , TC.ACTNO				AS ACTNO
		     , TC.DPSTR				AS DPSTR
		     , TC.RMRK              AS RMRK
		     , TC.DEL_YN            AS DEL_YN
		     , VI.DRVR_NM           AS DRVR_NM
		  FROM TB_RAW_MTR_TRSPRT_CST TC
		  	INNER JOIN TB_WRHS_VHCL_INFO VI
		 	ON TC.APC_CD = VI.APC_CD
		   AND TC.VHCLNO = VI.VHCLNO
		 WHERE TC.APC_CD = #{apcCd}
		]]>
		<if test='trsprtYmd != null and trsprtYmd != ""'>
			AND TC.TRSPRT_YMD = #{trsprtYmd}
		</if>
		<if test='prdcrCd != null and prdcrCd != ""'>
			AND TC.VHCLNO = (
		 		SELECT PI.VHCLNO
		   		  FROM TB_PRDCR_INFO PI
		  		 WHERE PI.APC_CD = #{apcCd}
		  		   AND PI.PRDCR_CD = #{prdcrCd}
			)
		</if>
		<if test='vhclno != null and vhclno != ""'>
			AND TC.VHCLNO = #{vhclno}
		</if>
    </select>

    <!-- ==========================================================================	-->
	<!-- NAME : com.at.apcss.am.cmns.mapper.RgnTrsprtCstMapper.insertRgnTrsprtCst		-->
	<!-- DESC : 지역별 운임 등록.	                                       			-->
	<!-- ==========================================================================	-->
	<!-- DATE   		AUTHOR        	DESCRIPTION                      			-->
	<!-- ===========  	============  	===========================================	-->
	<!-- 2023.07.11  	김 호        	Initial Creation                            -->
	<!-- ==========================================================================	-->
    <insert id="insertRgnTrsprtCst" parameterType="com.at.apcss.am.cmns.vo.RgnTrsprtCstVO">
    	<![CDATA[
    	INSERT INTO TB_RGN_TRSPRT_CST_INFO
    		(
    			APC_CD
    		  , TRSPRT_RGN_CD
    		  , TRSPRT_RGN_NM
    		  , TRSPRT_CST
    		  , RMRK
    		  , DEL_YN
    		  , SYS_FRST_INPT_DT
    		  , SYS_FRST_INPT_USER_ID
    		  , SYS_FRST_INPT_PRGRM_ID
    		  , SYS_LAST_CHG_DT
    		  , SYS_LAST_CHG_USER_ID
    		  , SYS_LAST_CHG_PRGRM_ID
    		)
   		VALUES
   			(
   				#{apcCd}
    		  , FN_GET_ID_TRSPRT_RGN_CD(#{apcCd})
    		  , #{trsprtRgnNm}
    		  , #{trsprtCst}
    		  , #{rmrk}
    		  , #{delYn}
    		  , SYSDATE
    		  , #{sysFrstInptUserId}
    		  , #{sysFrstInptPrgrmId}
    		  , SYSDATE
    		  , #{sysLastChgUserId}
    		  , #{sysLastChgPrgrmId}
   			)
    	]]>
    </insert>

    <!-- ==========================================================================	-->
	<!-- NAME : com.at.apcss.am.cmns.mapper.RgnTrsprtCstMapper.updateRgnTrsprtCst	-->
	<!-- DESC : 지역별 운임 변경.	                                       			-->
	<!-- ==========================================================================	-->
	<!-- DATE   		AUTHOR        	DESCRIPTION                      			-->
	<!-- ===========  	============  	===========================================	-->
	<!-- 2023.07.11  	김 호        	Initial Creation                            -->
	<!-- ==========================================================================	-->
	<update id="updateRgnTrsprtCst" parameterType="com.at.apcss.am.cmns.vo.RgnTrsprtCstVO">
		<![CDATA[
		UPDATE TB_RGN_TRSPRT_CST_INFO
		   SET SYS_LAST_CHG_DT 			= SYSDATE
    		 , SYS_LAST_CHG_USER_ID		= #{sysLastChgUserId}
    		 , SYS_LAST_CHG_PRGRM_ID 	= #{sysLastChgPrgrmId}
			 , TRSPRT_RGN_NM			= #{trsprtRgnNm}
    		 , TRSPRT_CST				= #{trsprtCst}
    		 , RMRK						= #{rmrk}
    		 , DEL_YN					= #{delYn}
		 WHERE APC_CD 					= #{apcCd}
		   AND TRSPRT_RGN_CD 			= #{trsprtRgnCd}
		]]>
	</update>

	<!-- ==========================================================================	-->
	<!-- NAME : com.at.apcss.am.cmns.mapper.RgnTrsprtCstMapper.deleteRgnTrsprtCst	-->
	<!-- DESC : 지역별 운임 삭제.	                                       			-->
	<!-- ==========================================================================	-->
	<!-- DATE   		AUTHOR        	DESCRIPTION                      			-->
	<!-- ===========  	============  	===========================================	-->
	<!-- 2023.07.11  	김 호        	Initial Creation                            -->
	<!-- ==========================================================================	-->
	<delete id="deleteRgnTrsprtCst" parameterType="com.at.apcss.am.cmns.vo.RgnTrsprtCstVO">
		<![CDATA[
		DELETE FROM TB_RGN_TRSPRT_CST_INFO
		 WHERE APC_CD			= #{apcCd}
		   AND TRSPRT_RGN_CD 	= #{trsprtRgnCd}
		]]>
	</delete>

</mapper>


