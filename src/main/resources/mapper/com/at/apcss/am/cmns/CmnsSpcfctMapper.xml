    	<![CDATA[
	    	INSERT /* com.at.apcss.am.cmns.mapper.CmnsSpcfctMapper.insertCmnsSpcfct */
	    		INTO TB_SPCFCT_CRTR
				(
					  ITEM_CD
					, SPCFCT_CD
		    		, SPCFCT_NM
		    		, SYS_FRST_INPT_DT
		    		, SYS_FRST_INPT_USER_ID
		    		, SYS_FRST_INPT_PRGRM_ID
		    		, SYS_LAST_CHG_DT
		    		, SYS_LAST_CHG_USER_ID
		    		, SYS_LAST_CHG_PRGRM_ID
	    		)
	   		VALUES
	   			(
	   				  #{itemCd}
					, #{spcfctCd}
		    		, #{spcfctNm}
		    		, SYSDATE
		    		, #{sysFrstInptUserId}
		    		, #{sysFrstInptPrgrmId}
		    		, SYSDATE
		    		, #{sysLastChgUserId}
		    		, #{sysLastChgPrgrmId}
	   			)
    	]]>
    </insert>

