    <select id="selectCmnsSpcfct" parameterType="com.at.apcss.am.cmns.vo.CmnsSpcfctVO" resultType="com.at.apcss.am.cmns.vo.CmnsSpcfctVO">
    	<![CDATA[
	    	SELECT /* com.at.apcss.am.cmns.mapper.CmnsSpcfctMapper.selectCmnsSpcfct */
				  GC.ITEM_CD
				, GC.SPCFCT_CD
				, GC.SPCFCT_NM
			    , GC.DEL_YN
			  FROM TB_SPCFCT_CRTR GC
			 WHERE VC.ITEM_CD = #{itemCd}
			   AND VC.SPCFCT_CD = #{spcfctCd}
		]]>
    </select>
    
	<!-- ==========================================================================	-->
	<!-- NAME : com.at.apcss.am.cmns.mapper.CmnsSpcfctMapper.selectCmnsSpcfctList	-->
	<!-- DESC : 규격 마스터 목록 조회.	                                       			-->
	<!-- ==========================================================================	-->
	<!-- DATE   		AUTHOR        	DESCRIPTION                      			-->
	<!-- ===========  	============  	===========================================	-->
	<!-- 2023.07.13  	김 호        	Initial Creation                            	-->
	<!-- ==========================================================================	-->
    <select id="selectCmnsSpcfctList" parameterType="com.at.apcss.am.cmns.vo.CmnsSpcfctVO" resultType="com.at.apcss.am.cmns.vo.CmnsSpcfctVO">
    	<![CDATA[
	    	SELECT /* com.at.apcss.am.cmns.mapper.CmnsSpcfctMapper.selectCmnsSpcfctList */
				  GC.ITEM_CD
				, GC.SPCFCT_CD
				, GC.SPCFCT_NM
			    , GC.DEL_YN
			  FROM TB_SPCFCT_CRTR GC
			 WHERE GC.ITEM_CD = #{itemCd}
		]]>
		
		<if test='spcfctCd != null and spcfctCd != ""'>
			   AND GC.SPCFCT_CD LIKE #{spcfctCd} || '%'
		</if>
		<if test='spcfctNm != null and spcfctNm != ""'>
			   AND GC.SPCFCT_NM LIKE '%' || #{spcfctNm} || '%'
		</if>
		<if test='delYn != null and delYn != ""'>
			   AND GC.DEL_YN = #{delYn}
		</if>
		<if test='apcCd != null and apcCd != ""'>
			   AND NOT EXISTS (
			   			SELECT 1
			   			  FROM TB_APC_SPCFCT_CRTR X
			   			 WHERE X.APC_CD = #{apcCd}
			   			   AND X.SPCFCT_CD = GC.SPCFCT_CD
			   			   AND X.ITEM_CD = GC.ITEM_CD
			   		)
		</if>
		
    </select>

