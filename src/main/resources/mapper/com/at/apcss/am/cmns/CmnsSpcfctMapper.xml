	<!-- NAME : com.at.apcss.am.cmns.mapper.CmnsSpcfctMapper.selectCmnsSpcfct		-->
	<!-- DESC : 규격 마스터 단건 조회.	                                       			-->
	<!-- ==========================================================================	-->
