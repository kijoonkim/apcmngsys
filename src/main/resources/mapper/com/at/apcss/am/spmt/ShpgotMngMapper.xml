    <delete id="deleteShpgotApcCrtr" parameterType="com.at.apcss.am.spmt.vo.ShpgotApcCrtrVO">
        DELETE FROM TB_SHPGOT_APC_CRTR
            WHERE
                APC_CD = #{apcCd}
            AND
                SHPGOT_CRTR_TYPE = #{shpgotCrtrType}
