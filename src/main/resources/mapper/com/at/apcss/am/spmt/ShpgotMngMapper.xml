    <!-- NAME : com.at.apcss.am.spmt.mapper.ShpgotMngMapper.selectShpgotRawMtr      -->
    <!-- DESC : 반품 기준 상세목록 조회.    	                         	                -->
    <!-- ==========================================================================	-->
    <!-- DATE   		AUTHOR        	DESCRIPTION                      			-->
    <!-- ===========  	============  	===========================================	-->
    <!-- 2025.01.03  	손민성        	Initial Creation                            -->
    <!-- ==========================================================================	-->
    <select id="selectShpgotRawMtr" parameterType="com.at.apcss.am.spmt.vo.ShpgotApcRawMtrVO" resultType="com.at.apcss.am.spmt.vo.ShpgotApcRawMtrVO">
        SELECT
             APC_CD
            ,SHPGOT_YMD
            ,SHPGOT_SN
            ,DTL_SN
            ,WRHSNO
            ,PRDCR_CD
            ,ITEM_CD
            ,VRTY_CD
            ,GRD_CD
            ,SPCFCT_CD
            ,SPMT_PCKG_UNIT_CD
            ,GDS_SE_CD
            ,WRHS_SE_CD
            ,WAREHOUSE_SE_CD
            ,CNPT_CD
            ,SHPGOT_CS_CD
            ,SHPGOT_BAD_CD
            ,SHPGOT_RMRK
            ,SHPGOT_QNTT
            ,SHPGOT_WGHT
            ,DEL_YN
            ,SYS_FRST_INPT_DT
            ,SYS_FRST_INPT_USER_ID
            ,SYS_FRST_INPT_PRGRM_ID
            ,SYS_LAST_CHG_DT
            ,SYS_LAST_CHG_USER_ID
            ,SYS_LAST_CHG_PRGRM_ID
            , (SELECT FN_GET_PRDCR_NM(PRDCR_CD, APC_CD) FROM DUAL) AS PRDCR_NM
            , (SELECT FN_GET_ITEM_NM(ITEM_CD, APC_CD) FROM DUAL) AS ITEM_NM
            , (SELECT FN_GET_VRTY_NM(ITEM_CD, VRTY_CD, APC_CD) FROM DUAL) AS VRTY_NM
        FROM
            TB_SHPGOT_APC_RAW_MTR
        WHERE
            APC_CD = #{apcCd}
        <if test='wrhsno != null and wrhsno !=""'>
            AND WRHSNO = #{wrhsno}
        </if>
        <if test='itemCd != null and itemCd !=""'>
            AND ITEM_CD = #{itemCd}
        </if>
        <if test='prdcrCd != null and prdcrCd !=""'>
            AND PRDCR_CD = #{prdcrCd}
        </if>
        <if test='vrtyCd != null and vrtyCd !=""'>
            AND VRTY_CD = #{vrtyCd}
        </if>
        <if test='warehouseSeCd != null and warehouseSeCd !=""'>
            AND WAREHOUSE_SE_CD = #{warehouseSeCd}
        </if>
        <if test='shpgotYmdFrom != null and shpgotYmdFrom !=""'>
            AND SHPGOT_YMD <![CDATA[>=]]> #{shpgotYmdFrom}
        </if>
        <if test='shpgotYmdTo != null and shpgotYmdTo !=""'>
            AND SHPGOT_YMD <![CDATA[<=]]> #{shpgotYmdTo}
        </if>

    </select>
