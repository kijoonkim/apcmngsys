        SELECT
              APC_CD
             ,SHPGOT_CRTR_TYPE
             ,CRTR_CD
             ,CRTR_VL
             ,CRTR_INDCT_NM
             ,INDCT_SEQ
             ,USE_YN
             ,DEL_YN
             ,SYS_FRST_INPT_DT
