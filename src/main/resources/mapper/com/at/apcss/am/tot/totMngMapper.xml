    <insert id="insertTotMngInfo" parameterType="com.at.apcss.am.tot.vo.TotMngVO">
    	<![CDATA[
	    	INSERT /* com.at.apcss.am.tot.mapper.insertTotMngInfo  */
	    	  INTO TB_TOT_CRTR (
				APC_CD
				, TOT_CRTR_TYPE
				, CRTR_CD
				, CRTR_VL
				, CRTR_INDCT_NM
				, TOT_DTL_TYPE
				, INDCT_SEQ
				, USE_YN
				, DEL_YN
