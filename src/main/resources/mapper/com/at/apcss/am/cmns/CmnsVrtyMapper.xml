	<!-- NAME : com.at.apcss.am.cmns.mapper.CmnsVrtyMapper.selectCmnsVrty			-->
	<!-- DESC : 품종 마스터 단건 조회.	                                       			-->
	<!-- ==========================================================================	-->
	<!-- DATE   		AUTHOR        	DESCRIPTION                      			-->
	<!-- ===========  	============  	===========================================	-->
	<!-- 2023.07.13  	김 호        	Initial Creation                            	-->
	<!-- ==========================================================================	-->
    <select id="selectCmnsVrty" parameterType="com.at.apcss.am.cmns.vo.CmnsVrtyVO" resultType="com.at.apcss.am.cmns.vo.CmnsVrtyVO">
    	<![CDATA[
	    	SELECT /* com.at.apcss.am.cmns.mapper.CmnsVrtyMapper.selectCmnsVrty */
				  VC.ITEM_CD
				, VC.VRTY_CD
				, VC.VRTY_NM
			    , VC.DEL_YN
			  FROM TB_VRTY_CRTR VC
			 WHERE VC.ITEM_CD = #{itemCd}
			   AND VC.VRTY_CD = #{vrtyCd}
		]]>
    </select>

	<!-- ==========================================================================	-->
	<!-- NAME : com.at.apcss.am.cmns.mapper.CmnsVrtyMapper.selectCmnsVrtyList		-->
	<!-- DESC : 품종 마스터 목록 조회.	                                       			-->
	<!-- ==========================================================================	-->
	<!-- DATE   		AUTHOR        	DESCRIPTION                      			-->
	<!-- ===========  	============  	===========================================	-->
	<!-- 2023.07.13  	김 호        	Initial Creation                            	-->
	<!-- ==========================================================================	-->
    <select id="selectCmnsVrtyList" parameterType="com.at.apcss.am.cmns.vo.CmnsVrtyVO" resultType="com.at.apcss.am.cmns.vo.CmnsVrtyVO">
    	<![CDATA[
	    	SELECT /* com.at.apcss.am.cmns.mapper.CmnsVrtyMapper.selectCmnsVrtyList */
				  VC.ITEM_CD
				, VC.VRTY_CD
				, VC.VRTY_NM
			    , VC.DEL_YN
			  FROM TB_VRTY_CRTR VC
			 WHERE VC.ITEM_CD = #{itemCd}
		]]>

		<if test='vrtyCd != null and vrtyCd != ""'>
			   AND VC.VRTY_CD LIKE #{vrtyCd} || '%'
		</if>
		<if test='vrtyNm != null and vrtyNm != ""'>
			   AND VC.VRTY_NM LIKE '%' || #{vrtyNm} || '%'
		</if>
		<if test='delYn != null and delYn != ""'>
			   AND VC.DEL_YN = #{delYn}
		</if>
		<if test='apcCd != null and apcCd != ""'>
			   AND NOT EXISTS (
			   			SELECT 1
			   			  FROM TB_APC_VRTY_CRTR X
			   			 WHERE X.APC_CD = #{apcCd}
			   			   AND X.VRTY_CD = VC.VRTY_CD
			   			   AND X.ITEM_CD = VC.ITEM_CD
			   		)
		</if>

    </select>

