    <insert id="insertCmnsVrty" parameterType="com.at.apcss.am.cmns.vo.CmnsVrtyVO">
    	<![CDATA[
	    	INSERT /* com.at.apcss.am.cmns.mapper.CmnsVrtyMapper.insertCmnsVrty */
	    		INTO TB_VRTY_CRTR
				(
					  ITEM_CD
					, VRTY_CD
		    		, VRTY_NM
		    		, SYS_FRST_INPT_DT
		    		, SYS_FRST_INPT_USER_ID
		    		, SYS_FRST_INPT_PRGRM_ID
		    		, SYS_LAST_CHG_DT
		    		, SYS_LAST_CHG_USER_ID
		    		, SYS_LAST_CHG_PRGRM_ID
	    		)
	   		VALUES
	   			(
	   				  #{itemCd}
					, #{vrtyCd}
		    		, #{vrtyNm}
		    		, SYSDATE
		    		, #{sysFrstInptUserId}
		    		, #{sysFrstInptPrgrmId}
		    		, SYSDATE
		    		, #{sysLastChgUserId}
		    		, #{sysLastChgPrgrmId}
	   			)
    	]]>
    </insert>

