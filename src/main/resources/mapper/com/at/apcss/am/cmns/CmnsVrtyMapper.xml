<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<!-- ==========================================================================	-->
<!-- NAME : CmnsVrtyMapper.xml                                   				-->
<!-- DESC : 품목 mapper                                             			-->
<!-- ==========================================================================	-->
<!-- DATE   		AUTHOR        	DESCRIPTION                      			-->
<!-- ===========  	============  	===========================================	-->
<!-- 2023.07.17  	김 호        	Initial Creation                            -->
<!-- ==========================================================================	-->

<mapper namespace="com.at.apcss.am.cmns.mapper.CmnsVrtyMapper">


	<!-- ==========================================================================	-->
	<!-- NAME : com.at.apcss.am.cmns.mapper.CmnsVrtyMapper.selectCmnsVrtyList		-->
	<!-- DESC : 품종 전체 목록 조회.	                                       		-->
	<!-- ==========================================================================	-->
	<!-- DATE   		AUTHOR        	DESCRIPTION                      			-->
	<!-- ===========  	============  	===========================================	-->
	<!-- 2023.07.17  	김 호        	Initial Creation                            -->
	<!-- ==========================================================================	-->
    <select id="selectCmnsVrtyList" parameterType="com.at.apcss.am.cmns.vo.CmnsVrtyVO" resultType="com.at.apcss.am.cmns.vo.CmnsVrtyVO">
    	<![CDATA[
    	SELECT VC.ITEM_CD       AS ITEM_CD
		     , VC.VRTY_CD       AS VRTY_CD
		     , VC.VRTY_NM       AS VRTY_NM
		     , VC.DEL_YN        AS DEL_YN
		  FROM TB_VRTY_CRTR VC
		 WHERE VC.DEL_YN = 'N'
		   AND NOT EXISTS (
		            SELECT X.VRTY_CD
		              FROM TB_APC_VRTY_CRTR X
		             WHERE X.APC_CD = #{apcCd}
		               AND X.VRTY_CD = VC.VRTY_CD
		               AND X.ITEM_CD = VC.ITEM_CD
		              )
		   AND VC.ITEM_CD = #{itemCd}
		]]>
		<if test='vrtyNm != null and vrtyNm != ""'>
		   AND VC.VRTY_NM LIKE '%' || #{vrtyNm} || '%'
		</if>
    </select>

	<!-- ==========================================================================	-->
	<!-- NAME : com.at.apcss.am.cmns.mapper.CmnsVrtyMapper.selectApcCmnsItemList	-->
	<!-- DESC : 품종 전체 목록 조회.	                                       		-->
	<!-- ==========================================================================	-->
	<!-- DATE   		AUTHOR        	DESCRIPTION                      			-->
	<!-- ===========  	============  	===========================================	-->
	<!-- 2023.07.17  	김 호        	Initial Creation                            -->
	<!-- ==========================================================================	-->
    <select id="selectApcCmnsVrtyList" parameterType="com.at.apcss.am.cmns.vo.CmnsVrtyVO" resultType="com.at.apcss.am.cmns.vo.CmnsVrtyVO">
    	<![CDATA[
    	SELECT AVC.APC_CD       AS APC_CD
		     , AVC.ITEM_CD      AS ITEM_CD
		     , AVC.VRTY_CD      AS VRTY_CD
		     , AVC.VRTY_NM      AS VRTY_NM
		     , AVC.DEL_YN       AS DEL_YN
		  FROM TB_APC_VRTY_CRTR AVC
		 WHERE AVC.APC_CD 	= #{apcCd}
		   AND AVC.ITEM_CD  = #{itemCd}
		]]>
    </select>

    <!-- ==========================================================================	-->
	<!-- NAME : com.at.apcss.am.cmns.mapper.CmnsVrtyMapper.insertCmnsVrty			-->
	<!-- DESC : 품종 등록.	                                       					-->
	<!-- ==========================================================================	-->
	<!-- DATE   		AUTHOR        	DESCRIPTION                      			-->
	<!-- ===========  	============  	===========================================	-->
	<!-- 2023.07.17  	김 호        	Initial Creation                            -->
	<!-- ==========================================================================	-->
    <insert id="insertCmnsVrty" parameterType="com.at.apcss.am.cmns.vo.CmnsVrtyVO">
    	<![CDATA[
    	INSERT INTO TB_APC_VRTY_CRTR
    		(
    			APC_CD
    		  , ITEM_CD
    		  , VRTY_CD
    		  , VRTY_NM
    		  , SYS_FRST_INPT_DT
    		  , SYS_FRST_INPT_USER_ID
    		  , SYS_FRST_INPT_PRGRM_ID
    		  , SYS_LAST_CHG_DT
    		  , SYS_LAST_CHG_USER_ID
    		  , SYS_LAST_CHG_PRGRM_ID
    		)
   		VALUES
   			(
   				#{apcCd}
    		  , #{itemCd}
    		  , #{vrtyCd}
    		  , #{vrtyNm}
    		  , SYSDATE
    		  , #{sysFrstInptUserId}
    		  , #{sysFrstInptPrgrmId}
    		  , SYSDATE
    		  , #{sysLastChgUserId}
    		  , #{sysLastChgPrgrmId}
   			)
    	]]>
    </insert>

    <!-- ==========================================================================	-->
	<!-- NAME : com.at.apcss.am.cmns.mapper.CmnsVrtyMapper.updateCmnsVrty			-->
	<!-- DESC : 품종 변경.	                                       					-->
	<!-- ==========================================================================	-->
	<!-- DATE   		AUTHOR        	DESCRIPTION                      			-->
	<!-- ===========  	============  	===========================================	-->
	<!-- 2023.07.17  	김 호        	Initial Creation                            -->
	<!-- ==========================================================================	-->
	<update id="updateCmnsVrty" parameterType="com.at.apcss.am.cmns.vo.CmnsVrtyVO">
		<![CDATA[
		UPDATE TB_CNPT_INFO
		   SET SYS_LAST_CHG_DT 			= SYSDATE
    		 , SYS_LAST_CHG_USER_ID		= #{sysLastChgUserId}
    		 , SYS_LAST_CHG_PRGRM_ID 	= #{sysLastChgPrgrmId}
			 , CNPT_NM					= #{cnptNm}
    		 , BRNO						= #{brno}
    		 , CNPT_TYPE				= #{cnptType}
    		 , PIC_NM					= #{picNm}
    		 , TELNO					= #{telno}
    		 , RMRK						= #{rmrk}
		 WHERE APC_CD 					= #{apcCd}
		   AND CNPT_CD 					= #{cnptCd}
		]]>
	</update>

	<!-- ==========================================================================	-->
	<!-- NAME : com.at.apcss.am.cmns.mapper.CnptMapper.deleteCmnsVrty				-->
	<!-- DESC : 품종 삭제.	                                       					-->
	<!-- ==========================================================================	-->
	<!-- DATE   		AUTHOR        	DESCRIPTION                      			-->
	<!-- ===========  	============  	===========================================	-->
	<!-- 2023.07.17  	김 호        	Initial Creation                            -->
	<!-- ==========================================================================	-->
	<delete id="deleteCmnsVrty" parameterType="com.at.apcss.am.cmns.vo.CmnsVrtyVO">
		<![CDATA[
		DELETE FROM TB_APC_VRTY_CRTR
		 WHERE APC_CD		= #{apcCd}
		   AND ITEM_CD 		= #{itemCd}
		   AND VRTY_CD		= #{vrtyCd}
		]]>
	</delete>

</mapper>


