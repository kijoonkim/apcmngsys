    <insert id="insertCmnsGrd" parameterType="com.at.apcss.am.cmns.vo.CmnsGrdVO">
    	<![CDATA[
	    	INSERT /* com.at.apcss.am.cmns.mapper.CmnsGrdMapper.insertCmnsGrd */
	    		INTO TB_GRD_CRTR
				(
					  ITEM_CD
					, GRD_CD
		    		, GRD_NM
		    		, SYS_FRST_INPT_DT
		    		, SYS_FRST_INPT_USER_ID
		    		, SYS_FRST_INPT_PRGRM_ID
		    		, SYS_LAST_CHG_DT
		    		, SYS_LAST_CHG_USER_ID
		    		, SYS_LAST_CHG_PRGRM_ID
	    		)
	   		VALUES
	   			(
	   				  #{itemCd}
					, #{grdCd}
		    		, #{grdNm}
		    		, SYSDATE
		    		, #{sysFrstInptUserId}
		    		, #{sysFrstInptPrgrmId}
		    		, SYSDATE
		    		, #{sysLastChgUserId}
		    		, #{sysLastChgPrgrmId}
	   			)
    	]]>
    </insert>

    <!-- ==========================================================================	-->
	<!-- NAME : com.at.apcss.am.cmns.mapper.CmnsGrdMapper.updateCmnsGrd				-->
	<!-- DESC : 등급 마스터 변경.	                                       				-->
	<!-- ==========================================================================	-->
	<!-- DATE   		AUTHOR        	DESCRIPTION                      			-->
	<!-- ===========  	============  	===========================================	-->
	<!-- 2023.07.13  	김 호        	Initial Creation                            	-->
	<!-- ==========================================================================	-->
	<update id="updateCmnsGrd" parameterType="com.at.apcss.am.cmns.vo.CmnsGrdVO">
		<![CDATA[
			UPDATE /* com.at.apcss.am.cmns.mapper.CmnsGrdMapper.updateCmnsGrd */
				TB_GRD_CRTR
			   SET
			   	  SYS_LAST_CHG_DT 			= SYSDATE
	    		, SYS_LAST_CHG_USER_ID		= #{sysLastChgUserId}
	    		, SYS_LAST_CHG_PRGRM_ID 	= #{sysLastChgPrgrmId}
				, GRD_NM					= #{grdNm}
	    		, DEL_YN					= #{delYn}
			 WHERE ITEM_CD = #{itemCd}
			   AND GRD_CD = #{grdCd}
		]]>
	</update>

