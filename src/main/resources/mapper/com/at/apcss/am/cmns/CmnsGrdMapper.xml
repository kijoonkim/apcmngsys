	<!-- ===========  	============  	===========================================	-->
	<!-- 2023.07.13  	김 호        	Initial Creation                            	-->
	<!-- ==========================================================================	-->
    <select id="selectCmnsGrd" parameterType="com.at.apcss.am.cmns.vo.CmnsGrdVO" resultType="com.at.apcss.am.cmns.vo.CmnsGrdVO">
    	<![CDATA[
	    	SELECT /* com.at.apcss.am.cmns.mapper.CmnsGrdMapper.selectCmnsGrd */
				  GC.ITEM_CD
				, GC.GRD_CD
				, GC.GRD_NM
			    , GC.DEL_YN
			  FROM TB_GRD_CRTR GC
			 WHERE VC.ITEM_CD = #{itemCd}
			   AND VC.GRD_CD = #{grdCd}
		]]>
    </select>
    
	<!-- ==========================================================================	-->
	<!-- NAME : com.at.apcss.am.cmns.mapper.CmnsGrdMapper.selectCmnsGrdList			-->
	<!-- DESC : 등급 마스터 목록 조회.	                                       			-->
	<!-- ==========================================================================	-->
	<!-- DATE   		AUTHOR        	DESCRIPTION                      			-->
	<!-- ===========  	============  	===========================================	-->
	<!-- 2023.07.13  	김 호        	Initial Creation                            	-->
	<!-- ==========================================================================	-->
    <select id="selectCmnsGrdList" parameterType="com.at.apcss.am.cmns.vo.CmnsGrdVO" resultType="com.at.apcss.am.cmns.vo.CmnsGrdVO">
    	<![CDATA[
	    	SELECT /* com.at.apcss.am.cmns.mapper.CmnsGrdMapper.selectCmnsGrdList */
				  GC.ITEM_CD
				, GC.GRD_CD
				, GC.GRD_NM
			    , GC.DEL_YN
			  FROM TB_GRD_CRTR GC
			 WHERE GC.ITEM_CD = #{itemCd}
		]]>
		
		<if test='grdCd != null and grdCd != ""'>
			   AND GC.GRD_CD LIKE #{grdCd} || '%'
		</if>
		<if test='grdNm != null and grdNm != ""'>
			   AND GC.GRD_NM LIKE '%' || #{grdNm} || '%'
		</if>
		<if test='delYn != null and delYn != ""'>
			   AND GC.DEL_YN = #{delYn}
		</if>
		<if test='apcCd != null and apcCd != ""'>
			   AND NOT EXISTS (
			   			SELECT 1
			   			  FROM TB_APC_GRD_CRTR X
			   			 WHERE X.APC_CD = #{apcCd}
			   			   AND X.GRD_CD = GC.GRD_CD
			   			   AND X.ITEM_CD = GC.ITEM_CD
			   		)
		</if>
		
    </select>

