<mapper namespace="com.at.apcss.fm.farm.mapper.FarmerEducationInfoLogMapper">

	<!-- ==========================================================================	-->
	<!-- NAME : com.at.apcss.fm.bbs.mapper.BfarmngMapper.selectBbs				-->
	<!-- DESC : 게시판 테이블 단건조회.											 		-->
	<!-- ==========================================================================	-->
	<!-- DATE   		AUTHOR			DESCRIPTION					  			-->
	<!-- ===========  	============  	===========================================	-->
	<!-- 2023.06.29  	jcshin			Initial Creation							-->
	<!-- ==========================================================================	-->
	<select id="selectFarmerEducationInfoLog" parameterType="com.at.apcss.fm.farm.vo.FarmerEducationInfoLogVO" resultType="com.at.apcss.fm.farm.vo.FarmerEducationInfoLogVO">
		<![CDATA[
			SELECT /* com.at.apcss.fm.farm.mapper.FarmerEducationInfoLogMapper.selectFarmerEducationInfoLog */
				FRMERNO
				, MNGMST_REGNO
				, CRCLM_CD
				, FLNM
				, EDNST_NM
				, CRCLM_NM
				, EDU_BGNG_YMD
				, EDU_END_YMD
				, IDNTY_YN

				, SN
				, DEL_YN
				, SYS_FRST_INPT_DT
				, SYS_FRST_INPT_PRGRM_ID
				, SYS_FRST_INPT_USER_ID
				, SYS_LAST_CHG_DT
				, SYS_LAST_CHG_PRGRM_ID
				, SYS_LAST_CHG_USER_ID
			FROM USRAM.TB_AX_FRMER_EDU_INFO_LOG
			WHERE 1=1

		]]>
			<if test='frmerno != null and frmerno != ""'>
				AND FRMERNO = #{frmerno}
			</if>
			<if test='mngmstRegno != null and mngmstRegno != ""'>
				AND MNGMST_REGNO = #{mngmstRegno}
			</if>
		ORDER BY SYS_LAST_CHG_DT DESC
	</select>

	<!-- ==========================================================================	-->
	<!-- NAME : com.at.apcss.fm.bbs.mapper.BfarmngMapper.selectBbsList			-->
	<!-- DESC : 게시판 테이블 목록 조회.											 		-->
	<!-- ==========================================================================	-->
	<!-- DATE   		AUTHOR			DESCRIPTION					  			-->
	<!-- ===========  	============  	===========================================	-->
	<!-- 2023.06.29  	jcshin			Initial Creation							-->
	<!-- ==========================================================================	-->
	<select id="selectFarmerEducationInfoLogList" parameterType="com.at.apcss.fm.farm.vo.FarmerEducationInfoLogVO" resultType="com.at.apcss.fm.farm.vo.FarmerEducationInfoLogVO">
				<!-- Start 페이징 -->
		<if test='pagingYn != null and pagingYn.equals("Y")'>
			SELECT
				  ROWNUM AS ROW_SEQ
				, COUNT(*) OVER() AS TOTAL_RECORD_COUNT
				, pt0.*
			  FROM (
		</if>

		<![CDATA[
			SELECT  /* com.at.apcss.fm.farm.mapper.FarmerEducationInfoLogMapper.selectFarmerEducationInfoLogList */
				FRMERNO
				, MNGMST_REGNO
				, CRCLM_CD
				, FLNM
				, EDNST_NM
				, CRCLM_NM
				, EDU_BGNG_YMD
				, EDU_END_YMD
				, IDNTY_YN

				, SN
				, DEL_YN
				, SYS_FRST_INPT_DT
				, SYS_FRST_INPT_PRGRM_ID
				, SYS_FRST_INPT_USER_ID
				, SYS_LAST_CHG_DT
				, SYS_LAST_CHG_PRGRM_ID
				, SYS_LAST_CHG_USER_ID
			FROM USRAM.TB_AX_FRMER_EDU_INFO_LOG
			WHERE 1=1
		]]>
			<if test='frmerno != null and frmerno != ""'>
				AND FRMERNO = #{frmerno}
			</if>
			<if test='mngmstRegno != null and mngmstRegno != ""'>
				AND MNGMST_REGNO = #{mngmstRegno}
			</if>
			ORDER BY SYS_LAST_CHG_DT DESC

		<!-- 페이징 -->
		<if test='pagingYn != null and pagingYn.equals("Y")'>
			  ) pt0
			OFFSET (#{currentPageNo} - 1) * #{recordCountPerPage} ROWS
			FETCH FIRST #{recordCountPerPage} ROWS ONLY
		</if>
	</select>

</mapper>