<mapper namespace="com.at.apcss.fm.popup.mapper.GpcSelectPopupMapper">

    <!-- ==========================================================================	-->
	<!-- NAME : com.at.apcss.fm.popup.mapper.GpcSelectPopupMapper.selectGpcList		-->
	<!-- DESC : apc목록 조회.	                                       			-->
	<!-- ==========================================================================	-->
	<!-- DATE   		AUTHOR        	DESCRIPTION                      			-->
	<!-- ===========  	============  	===========================================	-->
	<!-- 2023.10.03  	ljw        		Initial Creation                            -->
	<!-- ==========================================================================	-->
    <select id="selectGpcList" parameterType="com.at.apcss.fm.popup.vo.GpcSelectPopupVO" resultType="com.at.apcss.fm.popup.vo.GpcSelectPopupVO">
    	<!-- Start 페이징 -->
    	<if test='pagingYn != null and pagingYn.equals("Y")'>
    		SELECT
    			  ROWNUM AS ROW_SEQ
    			, COUNT(*) OVER() AS TOTAL_RECORD_COUNT
    			, pt0.*
    		  FROM (
    	</if>
    	<!-- End 페이징 -->

		<![CDATA[
    	SELECT
			ITEM_NM
			,(SELECT MIN(ITEM_CD)
				FROM TB_ITEM_CRTR
				WHERE ITEM_NM = IC.ITEM_NM
			) AS ITEM_CD
		FROM (SELECT ITEM_NM
				FROM TB_ITEM_CRTR
				WHERE DEL_YN = 'N'
				  AND ITEM_NM != '기타'
				GROUP BY ITEM_NM) IC
		WHERE 1=1
		 ]]>
		<if test='ctgryNm != null and ctgryNm != ""'>
				AND IC.ITEM_NM LIKE '%'||#{ctgryNm}||'%'
		</if>
		<if test='itemNm != null and itemNm != ""'>
				AND IC.ITEM_NM LIKE '%'||#{itemNm}||'%'
		</if>
		 ORDER BY IC.ITEM_NM ASC

		<!-- Start 페이징 -->
    	<if test='pagingYn != null and pagingYn.equals("Y")'>
    		  ) pt0
			OFFSET (#{currentPageNo} - 1) * #{recordCountPerPage} ROWS
			FETCH FIRST #{recordCountPerPage} ROWS ONLY
    	</if>
    	<!-- End 페이징 -->
    </select>

</mapper>