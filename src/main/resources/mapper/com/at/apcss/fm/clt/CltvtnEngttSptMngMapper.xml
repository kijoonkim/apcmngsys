	<!-- ==========================================================================	-->
    <delete id="deleteCltvtnEngttSptMng" parameterType="com.at.apcss.fm.clt.vo.CltvtnEngttSptMngVO">
    	<![CDATA[
	    	DELETE /* com.at.apcss.fm.clt.mapper.CltvtnEngttSptMngMapper.deleteCltvtnEngttSptMng */
	    		TB_COM_MSG
			 WHERE MSG_KEY	= #{msgKey}
    	]]>
    </delete>

</mapper>